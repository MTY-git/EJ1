<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/horizontal_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="15dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        app:cardBackgroundColor="#00BCD4"
        app:cardCornerRadius="10dp"
        app:contentPadding="5dp">

        <ImageView
            android:id="@+id/pic"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            tools:srcCompat="@drawable/userpng"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="130dp"
            android:layout_marginTop="7dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#263238"
            tools:text="Nombre Apellido" />

        <TextView
            android:id="@+id/tel"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="10dp"
            android:ems="10"
            android:inputType="phone"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#263238"
            tools:ignore="SpeakableTextPresentCheck,TextViewEdits,TouchTargetSizeCheck"
            tools:text="653289730" />

        <TextView
            android:id="@+id/email"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginStart="32dp"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:text="nombreapellido_gmail_com"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#263238"
            tools:ignore="HardcodedText,SpeakableTextPresentCheck,SpeakableTextPresentCheck,TextViewEdits,TouchTargetSizeCheck" />
    </androidx.cardview.widget.CardView>
</LinearLayout>